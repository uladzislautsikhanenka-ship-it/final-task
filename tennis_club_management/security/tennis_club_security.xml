    <record id="group_tennis_director" model="res.groups">
        <field name="name">Директор теннисных клубов</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="comment">Полный доступ ко всем функциям системы управления теннисными клубами</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('base.group_system')), (4, ref('hr.group_hr_manager')), (4, ref('tennis_club_management.group_tennis_settings_access'))]"/>
    </record>

