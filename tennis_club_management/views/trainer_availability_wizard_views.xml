<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="trainer_availability_wizard_view_form" model="ir.ui.view">
        <field name="name">trainer.availability.wizard.form</field>
        <field name="model">trainer.availability.wizard</field>
        <field name="arch" type="xml">
            <form string="Массовая доступность тренера">
                <group>
                    <group>
                        <field name="employee_id"/>
                        <field name="sports_center_id"/>
                        <field name="weekday_ids" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                    </group>
                </group>
                <footer>
                    <button string="Создать" type="object" name="action_create" class="btn-primary"/>
                    <button string="Отмена" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_trainer_availability_wizard" model="ir.actions.act_window">
        <field name="name">Массовая доступность</field>
        <field name="res_model">trainer.availability.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="trainer_availability_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>




