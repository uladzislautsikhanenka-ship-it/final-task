<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Календарь доступности тренера -->
    <record id="trainer_availability_view_calendar" model="ir.ui.view">
        <field name="name">trainer.availability.calendar</field>
        <field name="model">trainer.availability</field>
        <field name="arch" type="xml">
            <calendar string="Календарь доступности"
                      date_start="start_datetime"
                      date_stop="end_datetime"
                      color="color">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="sports_center_id"/>
            </calendar>
        </field>
    </record>

    <record id="trainer_availability_view_tree" model="ir.ui.view">
        <field name="name">trainer.availability.list</field>
        <field name="model">trainer.availability</field>
        <field name="arch" type="xml">
            <list string="Доступность тренеров">
                <field name="employee_id"/>
                <field name="sports_center_id"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
            </list>
        </field>
    </record>

    <record id="trainer_availability_view_form" model="ir.ui.view">
        <field name="name">trainer.availability.form</field>
        <field name="model">trainer.availability</field>
        <field name="arch" type="xml">
            <form string="Доступность тренера">
                <group>
                    <group>
                        <field name="employee_id" required="1"/>
                        <field name="sports_center_id" required="1"/>
                    </group>
                    <group>
                        <field name="start_datetime" required="1"/>
                        <field name="end_datetime" required="1"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_trainer_availability_calendar" model="ir.actions.act_window">
        <field name="name">Календарь доступности</field>
        <field name="res_model">trainer.availability</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="view_id" ref="trainer_availability_view_calendar"/>
        <field name="context">{"search_default_employee_id": active_id, "default_employee_id": active_id}</field>
        <field name="target">current</field>
    </record>

</odoo>


